/**golbal.wxss**/
.sub-title{
  font-size: 30rpx;
  margin-bottom: 20rpx;
  position: relative;
  color: #f28300;
  padding-left: 5rpx;
  border-left: 5rpx solid #f28300;
}
.sub-title .more{
  position: absolute;
  right: 0;
  top: 0;
  font-size: 24rpx;
  color: #999;
}
.mod-listvideo{
  width: 100%;
  white-space: nowrap;
  margin-bottom: 40rpx;
}
.mod-listvideo .item{
  width: 260rpx;
  /*height: 200rpx;*/
  display: inline-block;
  margin-right: 20rpx;
  position: relative;
}
.mod-listvideo .item image{
  width: 260rpx;
  height: 150rpx;
  margin-bottom: 15rpx;
}
.mod-listvideo .item .tit{
  font-size: 28rpx;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.mod-listvideo .item .mask{
  position: absolute;
  left: 0;
  top: 110rpx;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  padding-left: 20rpx;
  color: #fff;
  background: -webkit-linear-gradient(top, transparent, #000);
  box-sizing: border-box;
}
.mod-listvideo .time image,
.mod-listvideo .mask image{
  display: inline-block;
  vertical-align: middle;
  width: 24rpx;
  height: 24rpx;
  margin: 0 10rpx 0 0;
}
.mod-listvideo .item .time{
  color: #999;
  font-size: 24rpx;
  padding: 10rpx 0 0 0;
}
.mod-listvideo .item .like{
  position: absolute;
  right: 8rpx;
  top: 6rpx;
  width: 28rpx;
  height: 28rpx;
}
.mod-listvideo .like image{
  margin: 0;
  width: 100%;
  height: 100%;
}