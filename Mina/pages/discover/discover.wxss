page {
  background: #64696f;
  width: 100%;
  height: 100%;
  position: relative;
}

.item-cover{
    width: 750rpx;
    height: 370rpx;
    position: relative;

    /*display: -webkit-flex;
    -webkit-align-items: center;
    -webkit-justify-content: center;*/
    text-align: center;
    box-sizing: border-box;
    padding: 130rpx 0 0 0;
}
.item-cover image{
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    /*opacity: .4;*/
}
.item-cover:after{
    content: '';
    position: absolute;
    z-index: 2;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, .4);
}
.item-cover .tit,
.item-cover .subtit,
.item-cover .desc{
    display: block;
    color: #fff;
    font-size: 32rpx;
    font-weight: normal;
    position: relative;
    z-index: 5;
}
.item-cover .tit{
    color: #fff;
    font-size: 38rpx;
    margin-bottom: 20rpx;
}
.item-cover .subtit{
    margin-bottom: 40rpx;
    color: #ddd;
    font-size: 28rpx;
}
.item-cover .desc{
    color: #ccc;
    font-size: 24rpx;
}
.item-cover .desc text{
    margin: 0 10rpx;
}